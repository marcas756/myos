/*!
	/file	uileds_leds.c

*/



#include "uileds_leds.h"
#include "uileds_patterns.h"
#include "gpio.h"



void set_ld2(bool state)
{
    (state)?GPIO_SET(LD2):GPIO_SET(LD2);
}




UILEDS_LED(ld2,set_ld2);
UILEDS_LED(led2,set_led2);
UILEDS_LED(led3,set_led3);
UILEDS_LED(led4,set_led4);
UILEDS_LED(led5,set_led5);

UILEDS_LEDS(&led1,&led2,&led3,&led4,&led5);

void uileds_init()
{
    UILEDS_SET_PATTERN(led1,triple_flash,UILEDS_ORIG);
    UILEDS_SET_PATTERN(led2,off,UILEDS_ORIG);
    UILEDS_SET_PATTERN(led3,off,UILEDS_ORIG);
    UILEDS_SYNC(led4,led1,UILEDS_ORIG);
    UILEDS_SYNC(led5,led1,UILEDS_INV);

    initscr();
    noecho();
    curs_set(0);

    refresh();

    world = newwin(2,5,0,0);
    wclear(world);
}


